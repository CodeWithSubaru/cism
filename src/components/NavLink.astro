---
interface Props {
  link: string;
  className: string;
}
const { link, className } = Astro.props;
---

<a href={link} class={className}>
  <slot />
</a>

<style>
  .current::after {
    content: "";
    display: block;
    margin: auto;
    border-radius: 100%;
    background: var(--accent);
    width: 5px;
    height: 5px;
  }
</style>
